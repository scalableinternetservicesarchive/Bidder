<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @community.name %>
</p>

<p>
  <strong>Location:</strong>
  <%= @community.location %>
</p>

<td><%= link_to 'Join', join_community_path(@community), method: :post %></td>
<%= link_to 'Edit', edit_community_path(@community) %> |
<%= link_to 'Back', communities_path %>


<table>
  <thead>
  <tr>
    <th>Community</th>
    <th>User</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>

      </tr>
  <% end %>
  </tbody>
  <tbody>
  <% @items.each do |user| %>
      <tr>
        <td><%= user.item_name %></td>

      </tr>
  <% end %>
  </tbody>
</table>
